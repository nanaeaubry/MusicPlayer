<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="blocksDescendants"
	android:orientation="horizontal">
	<ProgressBar
		android:id="@+id/playlist_item_progress"
		style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:visibility="gone" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="90dp"
		android:layout_gravity="center_vertical"
		android:background="#63009688"
		android:orientation="horizontal" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:layout_gravity="center_vertical"
			android:background="#F6F6F6"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/tvwSeparator20"
				android:layout_width="10dp"
				android:layout_height="20dp" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="0.87"
				android:orientation="vertical">

				<TextView
					android:id="@+id/playlistName"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:text="Name of Playlist"
					android:textColor="#4D6D68"
					android:textSize="20sp"/>

			</LinearLayout>

			<Button
				android:id="@+id/deletePlaylist"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/ic_delete_black_24dp"
				android:focusable="false"
				android:visibility="visible"
				android:padding="5dp"/>

			<TextView
				android:id="@+id/tvwSeparator21"
				android:layout_width="5dp"
				android:layout_height="20dp" />
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
